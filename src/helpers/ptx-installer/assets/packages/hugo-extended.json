{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "hugo-extended",
    "displayName": "Hugo Extended",
    "description": "Hugo Static Site Generator with extended features (Sass/SCSS support)",
    "category": "development/tools",
    "homepage": "https://gohugo.io/",
    "documentation": "https://gohugo.io/documentation/",
    "license": "Apache-2.0",
    "maintainer": "Hugo Authors"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "windows": {
        "type": "zip",
        "variants": {
          "extended": {
            "version": "0.150.1",
            "urls": {
              "x64": "https://github.com/gohugoio/hugo/releases/download/v0.150.1/hugo_extended_0.150.1_windows-amd64.zip"
            },
            "extractTo": "C:/Program Files/Hugo",
            "postInstall": [
              "setx PATH \"%PATH%;C:\\Program Files\\Hugo\" /m"
            ]
          }
        },
        "verification": {
          "command": "hugo version",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "tar.gz",
        "variants": {
          "extended": {
            "version": "0.150.1",
            "urls": {
              "x64": "https://github.com/gohugoio/hugo/releases/download/v0.150.1/hugo_extended_0.150.1_linux-amd64.tar.gz"
            },
            "extractTo": "/usr/local/bin",
            "postInstall": [
              "sudo chmod +x /usr/local/bin/hugo"
            ]
          }
        },
        "verification": {
          "command": "hugo version",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check GitHub API for Hugo releases. This is the extended version with Sass/SCSS support.",
      "urlResolution": "hugo_extended_{version}_{os}-{arch}.{ext}",
      "updateGuidance": "Monitor Hugo extended releases. Extended version includes Sass/SCSS processing capabilities."
    },
    "dependencies": [],
    "templates": ["zip-archive", "tar-archive"]
  }
}