{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "ufw",
    "displayName": "Uncomplicated Firewall",
    "description": "User-friendly front-end for managing iptables firewall rules",
    "category": "security/firewall",
    "homepage": "https://launchpad.net/ufw",
    "documentation": "https://help.ubuntu.com/community/UFW",
    "license": "GPL-3.0",
    "maintainer": "Ubuntu Security Team"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "linux": {
        "type": "apt",
        "variants": {
          "apt": {
            "version": "latest",
            "packages": ["ufw"]
          },
          "dnf": {
            "version": "latest",
            "packages": ["ufw"]
          }
        },
        "verification": {
          "command": "ufw --version",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check Ubuntu/Debian repositories for ufw versions. Verify package availability across distributions.",
      "urlResolution": "Install via package managers (apt, dnf)",
      "updateGuidance": "Monitor ufw updates for security patches. Essential firewall tool for Linux systems."
    },
    "dependencies": [],
    "templates": ["apt-package"]
  }
}