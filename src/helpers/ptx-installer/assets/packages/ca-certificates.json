{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "ca-certificates",
    "displayName": "CA Certificates",
    "description": "Common CA certificates for SSL/TLS verification",
    "category": "security/certificates",
    "homepage": "https://wiki.mozilla.org/CA",
    "documentation": "https://wiki.mozilla.org/CA/Included_Certificates",
    "license": "MPL-2.0",
    "maintainer": "Mozilla"
  },
  "spec": {
    "hasVariants": false,
    "platforms": {
      "linux": {
        "type": "apt",
        "variants": {
          "apt": {
            "version": "latest",
            "packages": ["ca-certificates"]
          },
          "dnf": {
            "version": "latest",
            "packages": ["ca-certificates"]
          }
        },
        "verification": {
          "command": "ls /etc/ssl/certs/ca-certificates.crt",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check package repositories for ca-certificates versions. Essential system package.",
      "urlResolution": "Install via package managers",
      "updateGuidance": "Monitor CA certificate updates regularly for security. Essential for SSL/TLS."
    },
    "dependencies": [],
    "templates": ["apt-package"]
  }
}