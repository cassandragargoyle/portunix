{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "jinja2",
    "displayName": "Jinja2",
    "description": "Modern and designer-friendly templating language for Python",
    "category": "development/libraries",
    "homepage": "https://jinja.palletsprojects.com/",
    "documentation": "https://jinja.palletsprojects.com/en/3.1.x/",
    "license": "BSD-3-Clause",
    "maintainer": "Pallets"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "windows": {
        "type": "script",
        "variants": {
          "pip": {
            "version": "latest",
            "installScript": "python -m pip install jinja2",
            "postInstall": ["python -c \"import jinja2; print(jinja2.__version__)\""]
          }
        },
        "verification": {
          "command": "python -c \"import jinja2; print(jinja2.__version__)\"",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "apt",
        "variants": {
          "apt": {
            "version": "latest",
            "packages": ["python3-jinja2"]
          },
          "pip": {
            "version": "latest",
            "installScript": "python3 -m pip install jinja2",
            "postInstall": ["python3 -c \"import jinja2; print(jinja2.__version__)\""]
          }
        },
        "verification": {
          "command": "python3 -c \"import jinja2; print(jinja2.__version__)\"",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check PyPI for Jinja2 package versions. Verify package is maintained by Pallets team.",
      "urlResolution": "Install via pip or package managers",
      "updateGuidance": "Monitor Jinja2 releases for new versions and security updates. Popular Python templating library."
    },
    "dependencies": ["python"],
    "templates": ["pip-package"]
  }
}