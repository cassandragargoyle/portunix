{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "spice-guest-tools",
    "displayName": "SPICE Guest Tools",
    "description": "SPICE guest agent and drivers for improved virtual machine experience",
    "category": "infrastructure/virtualization",
    "homepage": "https://www.spice-space.org/",
    "documentation": "https://www.spice-space.org/documentation.html",
    "license": "GPL-2.0",
    "maintainer": "SPICE Project"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "windows": {
        "type": "script",
        "variants": {
          "latest": {
            "version": "latest",
            "installScript": "$url = 'https://www.spice-space.org/download/windows/spice-guest-tools/spice-guest-tools-latest.exe'; $output = Join-Path $env:TEMP 'spice-guest-tools.exe'; Invoke-WebRequest -Uri $url -OutFile $output; Start-Process -FilePath $output -ArgumentList '/S' -Wait; Remove-Item $output"
          }
        },
        "verification": {
          "command": "Get-Service spice-agent",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "apt",
        "variants": {
          "apt": {
            "version": "latest",
            "packages": ["spice-vdagent"]
          },
          "dnf": {
            "version": "latest",
            "packages": ["spice-vdagent"]
          }
        },
        "verification": {
          "command": "systemctl status spice-vdagentd",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check SPICE project website for guest tools versions.",
      "urlResolution": "Official SPICE downloads and package repositories",
      "updateGuidance": "Monitor SPICE guest tools for updates to improve VM performance."
    },
    "dependencies": [],
    "templates": ["exe-installer", "apt-package"]
  }
}