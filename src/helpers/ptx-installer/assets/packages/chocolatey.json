{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "chocolatey",
    "displayName": "Chocolatey Package Manager",
    "description": "Package manager for Windows - install software packages from command line",
    "category": "system/package-managers",
    "homepage": "https://chocolatey.org/",
    "documentation": "https://docs.chocolatey.org/",
    "license": "Apache-2.0",
    "maintainer": "Chocolatey Software"
  },
  "spec": {
    "hasVariants": false,
    "platforms": {
      "windows": {
        "type": "script",
        "variants": {
          "latest": {
            "version": "latest",
            "installScript": "Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))",
            "postInstall": [
              "refreshenv"
            ]
          }
        },
        "verification": {
          "command": "choco --version",
          "expectedExitCode": 0
        }
      }
    },
    "sources": {
      "official": {
        "type": "direct",
        "url": "https://chocolatey.org/install",
        "apiEndpoint": "https://community.chocolatey.org/install.ps1",
        "pattern": "chocolatey-{version}"
      },
      "community": {
        "type": "direct",
        "url": "https://community.chocolatey.org/packages/chocolatey",
        "apiEndpoint": "https://community.chocolatey.org/api/v2/Packages?$filter=Id%20eq%20%27chocolatey%27",
        "pattern": "chocolatey.{version}"
      }
    },
    "verification": {
      "checksumType": "sha256",
      "checksumUrl": "https://community.chocolatey.org/packages/chocolatey"
    },
    "aiPrompts": {
      "versionDiscovery": "Check Chocolatey community repository at https://community.chocolatey.org/packages/chocolatey for latest version. Verify installation script at https://community.chocolatey.org/install.ps1 and documentation at https://chocolatey.org/install.",
      "urlResolution": "Installation script: https://community.chocolatey.org/install.ps1",
      "updateGuidance": "Monitor Chocolatey releases through community repository. Verify PowerShell execution policy requirements and installation script integrity. Check for Windows compatibility and administrative privileges requirements."
    },
    "dependencies": [],
    "templates": ["powershell-script"]
  }
}