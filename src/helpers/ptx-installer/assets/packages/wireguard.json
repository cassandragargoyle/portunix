{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "wireguard",
    "displayName": "WireGuard",
    "description": "Fast, modern, secure VPN tunnel",
    "category": "security/vpn",
    "homepage": "https://www.wireguard.com/",
    "documentation": "https://www.wireguard.com/quickstart/",
    "license": "GPL-2.0",
    "maintainer": "WireGuard Project"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "linux": {
        "type": "apt",
        "variants": {
          "apt": {
            "version": "latest",
            "packages": ["wireguard"]
          },
          "dnf": {
            "version": "latest",
            "packages": ["wireguard-tools"]
          }
        },
        "verification": {
          "command": "wg --version",
          "expectedExitCode": 0
        }
      },
      "windows": {
        "type": "script",
        "variants": {
          "latest": {
            "version": "latest",
            "installScript": "$url = 'https://download.wireguard.com/windows-client/wireguard-installer.exe'; $output = Join-Path $env:TEMP 'wireguard-installer.exe'; Invoke-WebRequest -Uri $url -OutFile $output; Start-Process -FilePath $output -ArgumentList '/S' -Wait; Remove-Item $output"
          }
        },
        "verification": {
          "command": "where wireguard",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check WireGuard official website and package repositories for latest versions. Verify installer availability for Windows.",
      "urlResolution": "Windows: wireguard-installer.exe from official site. Linux: package managers",
      "updateGuidance": "Monitor WireGuard releases for security updates. Critical VPN software - keep updated for security."
    },
    "dependencies": [],
    "templates": ["apt-package", "exe-installer"]
  }
}