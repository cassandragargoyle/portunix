{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "actionlint",
    "displayName": "Actionlint",
    "description": "Static checker for GitHub Actions workflow files",
    "category": "development/tools",
    "homepage": "https://github.com/rhysd/actionlint",
    "documentation": "https://github.com/rhysd/actionlint#readme",
    "license": "MIT",
    "maintainer": "rhysd"
  },
  "spec": {
    "hasVariants": false,
    "platforms": {
      "windows": {
        "type": "zip",
        "variants": {
          "latest": {
            "version": "1.7.4",
            "urls": {
              "x64": "https://github.com/rhysd/actionlint/releases/download/v1.7.4/actionlint_1.7.4_windows_amd64.zip"
            },
            "extractTo": "C:/Program Files/Actionlint",
            "postInstall": [
              "setx PATH \"%PATH%;C:\\Program Files\\Actionlint\" /m"
            ]
          }
        },
        "verification": {
          "command": "actionlint --version",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "tar.gz",
        "variants": {
          "latest": {
            "version": "1.7.4",
            "urls": {
              "x64": "https://github.com/rhysd/actionlint/releases/download/v1.7.4/actionlint_1.7.4_linux_amd64.tar.gz"
            },
            "extractTo": "/usr/local/bin",
            "postInstall": [
              "sudo chmod +x /usr/local/bin/actionlint"
            ]
          }
        },
        "verification": {
          "command": "actionlint --version",
          "expectedExitCode": 0
        }
      }
    },
    "sources": {
      "github": {
        "type": "github",
        "url": "https://github.com/rhysd/actionlint",
        "apiEndpoint": "https://api.github.com/repos/rhysd/actionlint/releases/latest",
        "pattern": "actionlint_{version}_{os}_{arch}"
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check GitHub API for actionlint releases at https://api.github.com/repos/rhysd/actionlint/releases/latest. Parse version tag and verify binary packages for Windows, Linux, and macOS.",
      "urlResolution": "actionlint_{version}_{os}_{arch}.{ext} where os=windows/linux/darwin, arch=amd64/arm64",
      "updateGuidance": "Monitor actionlint releases for new versions. Actionlint follows semantic versioning. Verify binary compatibility and GitHub Actions feature support."
    },
    "dependencies": [],
    "templates": ["zip-archive", "tar-archive"]
  }
}