{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "ansible",
    "displayName": "Ansible",
    "description": "IT automation platform that makes your applications and systems easier to deploy",
    "category": "infrastructure/automation",
    "homepage": "https://www.ansible.com/",
    "documentation": "https://docs.ansible.com/",
    "license": "GPL-3.0",
    "maintainer": "Red Hat"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "linux": {
        "type": "apt",
        "variants": {
          "apt": {
            "version": "latest",
            "packages": ["ansible"]
          },
          "dnf": {
            "version": "latest",
            "packages": ["ansible"]
          },
          "pipx": {
            "version": "latest",
            "installScript": "pipx install ansible",
            "postInstall": ["ansible --version"]
          }
        },
        "verification": {
          "command": "ansible --version",
          "expectedExitCode": 0
        }
      },
      "windows": {
        "type": "script",
        "variants": {
          "wsl": {
            "version": "latest",
            "installScript": "wsl -- sudo apt update && wsl -- sudo apt install -y ansible",
            "postInstall": ["wsl -- ansible --version"]
          }
        },
        "verification": {
          "command": "wsl -- ansible --version",
          "expectedExitCode": 0
        }
      }
    },
    "sources": {
      "pypi": {
        "type": "pypi",
        "url": "https://pypi.org/project/ansible/",
        "pattern": "ansible=={version}"
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check PyPI for ansible package versions. Verify package is maintained by Red Hat/Ansible team. Check for stable releases.",
      "urlResolution": "Install via package managers (apt, dnf, yum) or pip/pipx",
      "updateGuidance": "Monitor Ansible releases for new versions. Ansible follows semantic versioning. Verify compatibility with managed systems and collection requirements."
    },
    "dependencies": ["python"],
    "templates": ["apt-package", "pipx-package"]
  }
}