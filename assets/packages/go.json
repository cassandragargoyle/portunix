{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "go",
    "displayName": "Go Programming Language",
    "description": "Go programming language from Google",
    "category": "development/languages",
    "homepage": "https://go.dev/",
    "documentation": "https://go.dev/doc/",
    "license": "BSD-3-Clause",
    "maintainer": "Google"
  },
  "spec": {
    "hasVariants": false,
    "platforms": {
      "windows": {
        "type": "msi",
        "variants": {
          "latest": {
            "version": "1.23.4",
            "urls": {
              "x64": "https://go.dev/dl/go1.23.4.windows-amd64.msi",
              "x86": "https://go.dev/dl/go1.23.4.windows-386.msi"
            },
            "installPath": "${ProgramFiles}/Go"
          }
        },
        "installArgs": ["/quiet"],
        "verification": {
          "command": "go version",
          "expectedExitCode": 0
        },
        "environment": {
          "GOROOT": "${install_path}",
          "PATH_APPEND": "${install_path}/bin"
        }
      },
      "linux": {
        "type": "tar.gz",
        "variants": {
          "latest": {
            "version": "1.23.4",
            "urls": {
              "x64": "https://go.dev/dl/go1.23.4.linux-amd64.tar.gz",
              "arm64": "https://go.dev/dl/go1.23.4.linux-arm64.tar.gz"
            },
            "extractTo": "/usr/local",
            "postInstall": [
              "sudo tar -C /usr/local -xzf ${downloaded_file}",
              "echo 'export PATH=$PATH:/usr/local/go/bin' | sudo tee /etc/profile.d/go.sh"
            ]
          }
        },
        "verification": {
          "command": "go version",
          "expectedExitCode": 0
        },
        "environment": {
          "GOROOT": "/usr/local/go",
          "PATH_APPEND": "/usr/local/go/bin"
        }
      }
    },
    "sources": {
      "official": {
        "type": "direct",
        "url": "https://go.dev/dl/",
        "apiEndpoint": "https://golang.org/dl/?mode=json",
        "pattern": "latest releases"
      },
      "github": {
        "type": "github",
        "url": "https://github.com/golang/go",
        "apiEndpoint": "https://api.github.com/repos/golang/go/releases/latest",
        "pattern": "go{version}"
      }
    },
    "verification": {
      "checksumType": "sha256",
      "checksumUrl": "https://go.dev/dl/"
    },
    "aiPrompts": {
      "versionDiscovery": "Check https://go.dev/dl/ for latest Go releases. Parse version numbers (format: go1.X.Y). Verify download assets include both Windows MSI and Linux tar.gz formats for multiple architectures.",
      "urlResolution": "For Windows: https://go.dev/dl/go{version}.windows-{arch}.msi. For Linux: https://go.dev/dl/go{version}.linux-{arch}.tar.gz",
      "updateGuidance": "Monitor Go releases for new versions. Go follows semantic versioning and provides regular updates. Verify installation paths and environment variables are correctly set."
    }
  }
}