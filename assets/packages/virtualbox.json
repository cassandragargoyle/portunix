{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "virtualbox",
    "displayName": "VirtualBox",
    "description": "Powerful x86 and AMD64/Intel64 virtualization product for enterprise and home use",
    "category": "infrastructure/virtualization",
    "homepage": "https://www.virtualbox.org/",
    "documentation": "https://www.virtualbox.org/wiki/Documentation",
    "license": "GPL-2.0",
    "maintainer": "Oracle"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "windows": {
        "type": "script",
        "variants": {
          "latest": {
            "version": "7.0.14",
            "installScript": "$url = 'https://download.virtualbox.org/virtualbox/7.0.14/VirtualBox-7.0.14-161095-Win.exe'; $output = Join-Path $env:TEMP 'VirtualBox-installer.exe'; Invoke-WebRequest -Uri $url -OutFile $output; Start-Process -FilePath $output -ArgumentList '--silent' -Wait; Remove-Item $output"
          }
        },
        "verification": {
          "command": "where VBoxManage",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "deb",
        "variants": {
          "apt": {
            "version": "latest",
            "repositorySetup": [
              "wget -q https://www.virtualbox.org/download/oracle_vbox_2016.asc -O- | sudo apt-key add -",
              "echo 'deb [arch=amd64] https://download.virtualbox.org/virtualbox/debian $(lsb_release -sc) contrib' | sudo tee /etc/apt/sources.list.d/virtualbox.list",
              "sudo apt update"
            ],
            "packages": ["virtualbox-7.0"]
          }
        },
        "verification": {
          "command": "VBoxManage --version",
          "expectedExitCode": 0
        }
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check VirtualBox official website for latest versions and download links.",
      "urlResolution": "Official Oracle VirtualBox downloads for each platform",
      "updateGuidance": "Monitor VirtualBox releases for new versions and security updates. Popular virtualization platform."
    },
    "dependencies": [],
    "templates": ["exe-installer", "deb-repository"]
  }
}