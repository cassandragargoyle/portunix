{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "gemini-cli",
    "displayName": "Google Gemini CLI",
    "description": "Google's official command line interface for Gemini AI",
    "category": "development/ai-tools",
    "homepage": "https://ai.google.dev/",
    "documentation": "https://ai.google.dev/docs/",
    "license": "Apache-2.0",
    "maintainer": "Google"
  },
  "spec": {
    "hasVariants": false,
    "platforms": {
      "windows": {
        "type": "npm",
        "variants": {
          "latest": {
            "version": "latest",
            "packages": ["@google/gemini-cli"],
            "installScript": "npm install -g @google/gemini-cli",
            "preInstall": [
              "where node || echo 'Node.js is required. Please install Node.js first.'"
            ]
          }
        },
        "verification": {
          "command": "gemini --version",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "npm",
        "variants": {
          "latest": {
            "version": "latest",
            "packages": ["@google/gemini-cli"],
            "installScript": "npm install -g @google/gemini-cli",
            "preInstall": [
              "which node || echo 'Node.js is required. Please install Node.js first.'"
            ]
          }
        },
        "verification": {
          "command": "gemini --version",
          "expectedExitCode": 0
        }
      }
    },
    "sources": {
      "npm": {
        "type": "npm",
        "url": "https://www.npmjs.com/package/@google/gemini-cli",
        "apiEndpoint": "https://registry.npmjs.org/@google/gemini-cli",
        "pattern": "@google/gemini-cli@{version}"
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check npm registry for @google/gemini-cli package versions using npm view @google/gemini-cli version. Verify package is published and maintained by Google.",
      "urlResolution": "@google/gemini-cli@{version} from npm registry",
      "updateGuidance": "Monitor Gemini CLI releases through npm registry and Google AI documentation. Ensure Node.js prerequisite is satisfied. Verify Google AI API compatibility."
    },
    "dependencies": ["nodejs"],
    "templates": ["npm-package"]
  }
}