{
  "apiVersion": "v1",
  "kind": "Package",
  "metadata": {
    "name": "claude-desktop",
    "displayName": "Claude Desktop",
    "description": "Anthropic Claude Desktop application with AI assistance capabilities",
    "category": "development/ai-tools",
    "homepage": "https://claude.ai/",
    "documentation": "https://docs.claude.com/en/docs/claude-desktop/",
    "license": "Proprietary",
    "maintainer": "Anthropic"
  },
  "spec": {
    "hasVariants": true,
    "platforms": {
      "windows": {
        "type": "script",
        "variants": {
          "latest": {
            "version": "latest",
            "installScript": "$url = 'https://claude.ai/download/win'; $output = Join-Path $env:TEMP 'claude-desktop-installer.exe'; Invoke-WebRequest -Uri $url -OutFile $output; Start-Process -FilePath $output -ArgumentList '/S' -Wait; Remove-Item $output",
            "postInstall": [
              "where claude-desktop"
            ]
          }
        },
        "verification": {
          "command": "where claude-desktop",
          "expectedExitCode": 0
        }
      },
      "linux": {
        "type": "script",
        "variants": {
          "appimage": {
            "version": "latest",
            "installScript": "curl -L -o ~/claude-desktop.AppImage https://claude.ai/download/linux && chmod +x ~/claude-desktop.AppImage && mkdir -p ~/.local/bin && mv ~/claude-desktop.AppImage ~/.local/bin/claude-desktop",
            "postInstall": [
              "which claude-desktop"
            ]
          }
        },
        "verification": {
          "command": "which claude-desktop",
          "expectedExitCode": 0
        },
        "environment": {
          "PATH_APPEND": "$HOME/.local/bin"
        }
      }
    },
    "sources": {
      "official": {
        "type": "direct",
        "url": "https://claude.ai/download/",
        "pattern": "claude-desktop-{version}"
      }
    },
    "aiPrompts": {
      "versionDiscovery": "Check official Claude download page at https://claude.ai/download/ for latest versions. Verify installers are available for Windows (EXE), macOS (DMG), and Linux (AppImage).",
      "urlResolution": "Platform-specific URLs: Windows: https://claude.ai/download/win, macOS: https://claude.ai/download/mac, Linux: https://claude.ai/download/linux",
      "updateGuidance": "Monitor Claude Desktop releases through official Anthropic channels. Claude Desktop is automatically updated through the application. Verify compatibility with system requirements."
    },
    "dependencies": [],
    "templates": ["script-installer"]
  }
}